<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <Spinner
        android:id="@+id/spinnerDeckName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:spinnerMode="dropdown"/>

     <EditText
        android:id="@+id/editTextFront"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Front Text"
        android:layout_below="@id/spinnerDeckName"
        android:padding="16dp"
        android:textSize="16sp"/>

     <EditText
        android:id="@+id/editTextBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Back Text"
        android:layout_below="@id/editTextFront"
        android:padding="16dp"
        android:textSize="16sp"/>

     <TextView
        android:id="@+id/textViewCardCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cards: 0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>


    <Button
        android:id="@+id/buttonAddCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Card"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
